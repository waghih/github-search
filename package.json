{
  "name": "github-search-react-app",
  "version": "1.0.0",
  "description": "A simple react app to search github repositories",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "webpack-dev-server --config webpack/development.js --port 8080 --colors --open",
    "build": "webpack --config webpack/production.js --progress --colors",
    "clean": "rimraf ./build",
    "heroku-postbuild": "npm run build"
  },
  "author": "Farooq Ezhar",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "prop-types": "^15.6.0",
    "rc-pagination": "^1.17.3",
    "react": "^16.2.0",
    "react-content-loader": "^3.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.7",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^23.6.0",
    "json-loader": "^0.5.7",
    "node-sass": "^4.7.2",
    "redux-saga-testing": "^1.0.5",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.7"
  },
  "jest": {
    "coverageDirectory": "report",
    "testMatch": [
      "<rootDir>/tests/**/?(*.)(test).{js,jsx,mjs}"
    ],
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "moduleNameMapper": {
      "actions": "<rootDir>/src/actions",
      "components": "<rootDir>/src/components",
      "reducers/(.*)": "<rootDir>/src/reducers/$1",
      "sagas": "<rootDir>/src/sagas",
      "api": "<rootDir>/src/api"
    }
  }
}
